              ],
              "path": [
                "api",
                "v1",
                "auth",
                "get-token"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.access_token) {",
                  "  pm.environment.set('access_token', data.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
