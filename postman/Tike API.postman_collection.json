    {
      "name": "Auth",
      "item": [
        {
          "name": "Get Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@tike.co\",\n  \"password\": \"qwerty1\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/get-token",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "get-token"
              ]
            },
            "description": "Login and get OAuth access token.\n\nRequires: API Key\n\nThe response includes an access_token that is automatically saved to the environment variable for use in authenticated endpoints."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.access_token) {",
                  "  pm.environment.set('access_token', data.access_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"country_code\": \"+1\",\n  \"phone_number\": \"5551234567\",\n  \"password\": \"SecurePass123\",\n  \"password_confirmation\": \"SecurePass123\",\n  \"language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/sign-up",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "sign-up"
              ]
            },
            "description": "Register a new user.\n\nRequires: API Key\n\n**Required fields:**\n- name\n- last_name\n- email (unique)\n- country_code\n- phone_number (unique per country_code)\n- password (min 8 chars, mixed case, numbers)\n- password_confirmation\n\n**Optional:**\n- language (es or en, default: es)"
          },
          "response": []
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{verification_token}}",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": ""
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/verify-email",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "verify-email"
              ]
            },
            "description": "Verify user email address.\n\nRequires: API Key + Verification Token\n\nThe verification token is sent via email and has the 'user:verify' scope. After verification, the token is revoked."
          },
          "response": []
        },
        {
          "name": "Update Password",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"current_password\": \"OldPassword123\",\n  \"new_password\": \"NewSecurePass456\",\n  \"new_password_confirmation\": \"NewSecurePass456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/password",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "password"
              ]
            },
            "description": "Update authenticated user's password.\n\nRequires: API Key + Access Token + 'user:update-password' scope\n\n**Required fields:**\n- current_password\n- new_password (min 8 chars, mixed case, numbers)\n- new_password_confirmation"
          },
          "response": []
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@tike.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/password/forgot",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "password",
                "forgot"
              ]
            },
            "description": "Request password reset email.\n\nRequires: API Key\n\nSends a password reset email with a token that has 'user:recover-password' scope."
          },
          "response": []
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{reset_token}}",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"new_password\": \"NewSecurePass456\",\n  \"new_password_confirmation\": \"NewSecurePass456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/password/reset",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "password",
                "reset"
              ]
            },
            "description": "Reset password using reset token.\n\nRequires: API Key + Reset Token + 'user:recover-password' scope\n\n**Required fields:**\n- new_password (min 8 chars, mixed case, numbers)\n- new_password_confirmation\n\nAfter reset, all user tokens are revoked and email is verified if not already."
          },
          "response": []
        }
      ]
    },
