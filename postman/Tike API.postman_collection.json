      "item": [
        {
          "name": "Get Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@tike.com\",\n  \"password\": \"qwerty123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/get-token",
              "host": [
